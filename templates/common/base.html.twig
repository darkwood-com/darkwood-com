<!DOCTYPE html>
<html lang="{{ app.request.locale }}" class="">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>{{ page.title }}</title>
    <meta name="description" content="{{ page.seoDescription }}">
    <meta name="keywords" content="{{ page.seoKeywords }}">

    <link rel="author" href="{{ asset('/humans.txt') }}" />
    <meta name="Owner" content="Mathieu Ledru"/>
    <meta name="Author" content="Mathieu Ledru"/>
    <meta name="Publisher" content="Mathieu Ledru"/>
    <meta name="Date-Creation-yyyymmdd" content="20051005"/>

    {# google webmaster tool -#}
    <meta name="google-site-verification" content="LJqS0GX15gkq-lSFKr_tuWRfw-EUz4rgZR1LoEvzpKU" />

    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    <link rel="sitemap" type="application/xml" title="Sitemap" href="{{ path(page.page.site.ref ~ '_sitemap_xml') }}" />
    <link rel="alternate" type="application/rss+xml" title="RSS 2.0" href="{{ path(page.page.site.ref ~ '_rss') }}" />

    {# social share facebook -#}
    <meta property="og:site_name" content="{{ data.site.ref|default('') }}">
    <meta property="og:title" content="{{ data.meta.facebook.title|default('') }}">
    <meta property="og:description" content="{{ data.meta.facebook.description|default('') }}">
    <meta property="og:url" content="{{ data.meta.facebook.url|default('') }}">
    <meta property="og:type" content="{{ data.meta.facebook.type|default('') }}">
    <meta property="og:image" content="{{ absolute_url(data.meta.facebook.src.desktop|default('/common/images/site/cover.png')) }}">
    <meta property="og:locale" content="{{ app.request.locale }}">

    {# social share twitter -#}
    <meta name="twitter:card" content="{{ data.meta.twitter.card|default('') }}">
    <meta name="twitter:site" content="{{ data.meta.twitter.site|default('') }}">
    <meta name="twitter:title" content="{{ data.meta.twitter.title|default('') }}">
    <meta name="twitter:description" content="{{ data.meta.twitter.description|default('') }}">
    <meta name="twitter:image:src" content="{{ absolute_url(data.meta.twitter.src.desktop|default('/common/images/site/cover.png')) }}">

    {{ render(controller('App\\Controller\\CommonController::hreflangs', { 'ref': page.page.ref })) }}

    {% block css -%}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body class="{% block layout %}layout{% endblock %}">

    {% block body %}{% endblock %}

    {% block javascript -%}
    <!-- google analytics -->
    <script type="text/javascript">
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', '{{ page.page.site.gaId }}', 'auto');
        ga('send', 'pageview');
    </script>

    <!-- scripts -->
    {{ encore_entry_script_tags('app') }}
    {% endblock %}

</body>
</html>
