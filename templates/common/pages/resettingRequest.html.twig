{% extends ""~ site_ref ~"/base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block content %}

<h1>{{ page.title }}</h1>
<form id="resetting_form"  action="{{ path('common_resetting_send_email') }}" method="POST" novalidate="novalidate">
    <ul>
        {% if invalid_username is defined %}
        <li><div class="alert_error">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</div></li>
        {% endif %}
        <li>
            <label for="resetting_username">{{ 'resetting.request.username'|trans }}</label>
            <input type="text" id="resetting_username" name="username" required="required" />
        </li>
    </ul>
    <ul>
        <li><input type="submit" value="{{ 'resetting.request.submit'|trans }}" /></li>
    </ul>
</form>

{% endblock %}
