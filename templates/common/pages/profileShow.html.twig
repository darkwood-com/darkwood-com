{% extends ""~ site_ref ~"/base.html.twig" %}

{% block content %}

<h1>{{ page.title }} {{ user.username }}</h1>

<table>
    <colgroup>
        <col class="col-3" />
        <col class="col-3" />
        <col class="col-3" />
    </colgroup>
    <thead>
    <tr>
        <th colspan="3">{{ 'common.profile.infos.title'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td rowspan="6"><img src="{{ asset(vich_uploader_asset(user, 'image')|default('/common/images/profile/default.jpg'))|imagine_filter('user_profile') }}" alt="{{ 'common.profile.infos.avatar'|trans }}"></td>
        <td>{{ 'common.profile.infos.firstname'|trans|upper }}</td>
        <td>{{ user.firstname }}</td>
    </tr>
    <tr>
        <td>{{ 'common.profile.infos.lastname'|trans|upper }}</td>
        <td>{{ user.lastname }}</td>
    </tr>
    <tr>
        <td>{{ 'common.profile.infos.birthday'|trans|upper }}</td>
        <td>{% if user.birthday %}{{ user.birthday|format_datetime('long', 'none') }}{% endif %}</td>
    </tr>
    <tr>
        <td>{{ 'common.profile.infos.city'|trans|upper }}</td>
        <td>{{ user.city }}</td>
    </tr>
    <tr>
        <td>{{ 'common.profile.infos.register_day'|trans|upper }}</td>
        <td>{{ user.created|format_datetime('long', 'none') }}</td>
    </tr>
    <tr>
        <td>{{ 'common.profile.infos.comment'|trans|upper }}</td>
        <td>{{ user.comment }}</td>
    </tr>
    </tbody>
</table>

{% if playerInfo %}
<table>
    <colgroup>
        <col class="col-3" />
        <col class="col-3" />
        <col class="col-3" />
    </colgroup>
    <thead>
    <tr>
        <th colspan="3">{{ 'common.profile.infos.player'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td rowspan="8"><img src="{{ asset(vich_uploader_asset(playerInfo.player.classe, 'image')) }}" alt="{{ 'common.profile.infos.player'|trans }}" /><br />{{ playerInfo.player.classe.title }}</td>
        <td>{{ 'darkwood.play.label.level'|trans|upper }}</td>
        <td>{{ playerInfo.level.level }}</td>
    </tr>
    <tr>
        <td>{{ 'darkwood.play.label.life'|trans|upper }}</td>
        <td>{{ playerInfo.player.lifeMin }} {{ 'darkwood.play.label.on'|trans }} {{ playerInfo.player.lifeMax }}</td>
    </tr>
    <tr>
        <td>{{ 'darkwood.play.label.damages'|trans|upper }}</td>
        <td>{{ playerInfo.damage.min }} + {{ playerInfo.swordDamage }}% {{ 'darkwood.play.label.to'|trans }} {{ playerInfo.damage.max }} + {{ playerInfo.swordDamage }}%</td>
    </tr>
    <tr>
        <td>{{ 'darkwood.play.label.hit_luck'|trans|upper }}</td>
        <td>{{ playerInfo.hitLuck }}%</td>
    </tr>
    <tr>
        <td>{{ 'darkwood.play.label.armor'|trans|upper }}</td>
        <td>{{ playerInfo.armor }} + {{ playerInfo.armorDefence }}%</td>
    </tr>
    <tr>
        <td>{{ 'darkwood.play.label.potion'|trans|upper }}</td>
        <td>{{ playerInfo.player.potion.life }}</td>
    </tr>
    <tr>
        <td>{{ 'darkwood.play.label.gold'|trans|upper }}</td>
        <td>{{ playerInfo.player.gold }}</td>
    </tr>
    <tr>
        <td>{{ 'darkwood.play.label.xp'|trans|upper }}</td>
        <td>{{ playerInfo.player.xp }}</td>
    </tr>
    </tbody>
</table>
{% endif %}


{% endblock %}

