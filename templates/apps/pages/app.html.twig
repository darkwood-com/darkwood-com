{% extends "apps/base.html.twig" %}

{% block content %}

<div class="project">
{% if contents | length > 0 %}
<table class="{{ page.page.theme }}">
    <colgroup>
        {% if contents | length == 0 %}
            <col class="col-1" />
        {% elseif contents | length == 1 %}
            <col class="col-2" />
            <col class="col-2" />
        {% elseif contents | length == 2 %}
            <col class="col-3" />
            <col class="col-3" />
            <col class="col-3" />
        {% elseif contents | length == 3 %}
            <col class="col-4" />
            <col class="col-4" />
            <col class="col-4" />
            <col class="col-4" />
        {% elseif contents | length == 4 %}
            <col class="col-5" />
            <col class="col-5" />
            <col class="col-5" />
            <col class="col-5" />
            <col class="col-5" />
        {% elseif contents | length == 5 %}
            <col class="col-6" />
            <col class="col-6" />
            <col class="col-6" />
            <col class="col-6" />
            <col class="col-6" />
            <col class="col-6" />
        {% endif %}
    </colgroup>
    <tbody>
        {% if page.page.bannerName %}
        <tr class="banner">
            <td colspan="{{ (contents | length) + 1 }}">
                <img src="{{ asset(vich_uploader_asset(page.page, 'banner')) }}" alt="{{ 'apps.app.banner'|trans }}" class="center" />
            </td>
        </tr>
        {% endif %}
        <tr class="links">
            <td><a href="{{ path('apps_app', {'ref': page.page.ref}) }}">{{ 'apps.app.home'|trans }}</a></td>
            {% for content in contents %}
            <td><a href="{{ path('apps_app', {'ref': page.page.ref, 'slug': content.slug}) }}">{{ content.title }}</a></td>
            {% endfor %}
        </tr>
    </tbody>
</table>
{{ include(template_from_string(content))|markdown }}
{% else %}
<h1>{{ page.title }}</h1>
{{ include(template_from_string(content))|markdown }}
{% endif %}
</div>

<ul class="comments">
    <li>
        {{ knp_pagination_render(comments, 'common/partials/sliding.html.twig') }}
    </li>
    {% for comment in comments %}
        <li>
            {% if comment.user %}
                <a href="{{ path('common_profile', {'username': comment.user.username}) }}" class="author">
                    <img src="{{ asset(vich_uploader_asset(comment.user, 'image')|default('/common/images/profile/default.jpg'))|imagine_filter('user') }}" alt="{{ 'common.profile.infos.avatar'|trans }}"><br />
                    {{ comment.user.username }}
                </a>
            {% else %}
                <a class="author no_link">
                    <img src="{{ asset('/common/images/say/visitor.jpg')|imagine_filter('user') }}" alt="{{ 'common.profile.infos.avatar'|trans }}"><br />
                    {{ 'common.comment.visitor'|trans }}
                </a>
            {% endif %}
            <div class="content">
                <div class="arrow"></div>
                {{ comment.content|nl2br }}
                <div class="date">
                    {{ 'common.comment.on'|trans }} {{ comment.created|format_datetime('long', 'short') }}
                </div>
            </div>
        </li>
    {% endfor %}
    <li>
        {{ knp_pagination_render(comments, 'common/partials/sliding.html.twig') }}
    </li>
</ul>
<form id="comment_form" action="{{ path('apps_app', {'ref': page.page.ref, 'slug': slug}) }}" method="post" novalidate="novalidate">
    {{ form_errors(form._token) }}
    {{ form_widget(form._token) }}
    {% for flashMessage in app.session.flashbag.get('success') %}<div class="alert_success">{{ flashMessage }}</div>{% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}<div class="alert_error">{{ flashMessage }}</div>{% endfor %}
    {% if form.vars['errors'] |length > 0 %}<div class="alert_error">{{ form_errors(form) }}</div>{% endif %}
    {% if form.content.vars['errors'] |length > 0 %}<div class="alert_error">{{ form_errors(form.content) }}</div>{% endif %}
    <ul>
        <li class="centered">
            {{ form_label(form.content, 'common.comment.comment', {'label_attr':{'class': 'centered'}}) }}
            {{ form_widget(form.content, {'attr':{'class': 'centered', 'rows': '5', 'cols': '35'} }) }}
        </li>
    </ul>
    <ul>
        <li class="centered">
            <input type="submit" class="centered" value="{{ 'common.comment.send'|trans }}">
        </li>
    </ul>
</form>
{% endblock %}
