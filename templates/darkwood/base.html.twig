{% extends "common/base.html.twig" %}

{% block layout %}layout layout-darkwood{% endblock %}

{% block body %}
    <div class="container-fluid theme theme-darkwood">
        <div class="row theme-header">
            <div class="theme-header-logo"></div>
        </div>

        <div class="row theme-body">
            <div class="col-md-2">
                <div class="row theme-menu">
                    <div class="col-md-12 theme-menu-top">
                        {{ render(controller('App\\Controller\\DarkwoodController::menu', { 'ref': page.page.ref })) }}
                    </div>
                </div>
            </div>
            <div class="col-md-10">
                <div class="row theme-content{% if showLinks is defined %} show_links{% endif %}">
                    <div class="col-md-12 theme-content-top">
                        {% block content %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>

        <div class="row theme-footer">
            {%- include "darkwood/partials/footer.html.twig" -%}
        </div>
    </div>
{% endblock %}
