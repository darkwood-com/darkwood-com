{% for flashMessage in app.session.flashbag.get('warning') %}<div class="alert_warning">{{ flashMessage }}</div>{% endfor %}
<table>
    <colgroup>
        <col class="col-3" />
        <col class="col-3" />
        <col class="col-3" />
    </colgroup>
    <thead>
    <tr>
        <th colspan="3">{{ 'darkwood.play.label.your_settings'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td rowspan="5"><img src="{{ asset(vich_uploader_asset(data.info.player.armor, 'image')) }}" /></td>
        <td>{{ 'darkwood.play.label.your_armor'|trans|upper }}</td>
        <td>{{ data.info.player.armor.title }}</td>
    </tr>
    <tr>
        <td>{{ 'darkwood.play.label.armor'|trans|upper }}</td>
        <td>{{ data.info.player.armor.armor }} + {{ data.info.armorDefence }}%</td>
    </tr>
    <tr>
        <td>{{ 'darkwood.play.label.sell_price'|trans|upper }}</td>
        <td>{{ data.armor.sellPrice }}</td>
    </tr>
    <tr>
        <td>{{ 'darkwood.play.label.your_gold'|trans|upper }}</td>
        <td>{{ data.info.player.gold }}</td>
    </tr>
    <tr>
        <td>{{ 'darkwood.play.label.your_strength'|trans|upper }}</td>
        <td>{{ data.info.player.strength }}</td>
    </tr>
    </tbody>
</table>

<table id="armorinfos">
    <colgroup>
        <col class="col-3" />
        <col class="col-3" />
        <col class="col-3" />
    </colgroup>
    <thead>
    <tr>
        <th colspan="3">{{ 'darkwood.play.label.buy'|trans }} {{ data.currentArmor.armor.title }}</th>
    </tr>
    </thead>
    <tbody>
    {% if data.currentArmor.next %}
        <tr>
            <td colspan="3" class="spaced">
                <a class="go" data-state="armor" data-action-armor-next="true">
                    <img src="{{ asset('/common/images/components/theme-dark/site/icons/16x16/arrow_up.png') }}" />
                </a>
            </td>
        </tr>
    {% endif %}
    <tr>
        <td rowspan="3"><img src="{{ asset(vich_uploader_asset(data.currentArmor.armor, 'image')) }}" /></td>
        <td>{{ 'darkwood.play.label.buy_price'|trans|upper }}</td>
        <td>{{ data.currentArmor.armor.price }}</td>
    </tr>
    <tr>
        <td>{{ 'darkwood.play.label.armor'|trans|upper }}</td>
        <td>{{ data.currentArmor.armor.armor }}</td>
    </tr>
    <tr>
        <td>{{ 'darkwood.play.label.required_strength'|trans|upper }}</td>
        <td>{{ data.currentArmor.armor.requiredStrength }}</td>
    </tr>
    {% if data.currentArmor.previous %}
        <tr>
            <td colspan="3" class="spaced">
                <a class="go" data-state="armor" data-action-armor-previous="true">
                    <img src="{{ asset('/common/images/components/theme-dark/site/icons/16x16/arrow_down.png') }}" />
                </a>
            </td>
        </tr>
    {% endif %}
    </tbody>
</table>

<p id="actions">
    <a id="action_return" class="go icon left">{{ 'darkwood.play.label.return'|trans }}</a>
    <a id="action_buy" class="go icon right" data-state="armor" data-action-armor-buy="true">{{ 'darkwood.play.label.buy'|trans }}</a>
    <a id="action_sell" class="go icon right" data-state="armor" data-action-armor-sell="true">{{ 'darkwood.play.label.sell'|trans }}</a>
</p>
