<table>
    <colgroup>
        <col class="col-2" />
        <col class="col-2" />
    </colgroup>
    <thead>
    <tr>
        <th colspan="2">{{ 'common.profile.infos.title'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td colspan="2"><img src="{{ asset(vich_uploader_asset(user, 'image')|default('/common/images/profile/default.jpg'))|imagine_filter('user_profile') }}"></td>
    </tr>
    <tr>
        <td>{{ 'common.profile.infos.firstname'|trans|upper }}</td>
        <td>{{ user.firstname }}</td>
    </tr>
    <tr>
        <td>{{ 'common.profile.infos.lastname'|trans|upper }}</td>
        <td>{{ user.lastname }}</td>
    </tr>
    <tr>
        <td>{{ 'common.profile.infos.birthday'|trans|upper }}</td>
        <td>{% if user.birthday %}{{ user.birthday|format_datetime('long', 'none') }}{% endif %}</td>
    </tr>
    <tr>
        <td>{{ 'common.profile.infos.city'|trans|upper }}</td>
        <td>{{ user.city }}</td>
    </tr>
    <tr>
        <td>{{ 'common.profile.infos.register_day'|trans|upper }}</td>
        <td>{{ user.created|format_datetime('long', 'none') }}</td>
    </tr>
    <tr>
        <td>{{ 'common.profile.infos.comment'|trans|upper }}</td>
        <td>{{ user.comment }}</td>
    </tr>
    <tr>
        <td colspan="2"><a href="{{ url('darkwood_play', {'display': display, 'state':'report', 'username': user.username}) }}" class="report">{{ 'darkwood.play.label.report_user'|trans }}</a></td>
    </tr>
    </tbody>
</table>
