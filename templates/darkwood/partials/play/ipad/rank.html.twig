    <a id="action_sort_by_lucky_lucke" class="icon left{% if mode == 'by_class_lucky_lucke' %} selected{% endif %}" href="{{ url('darkwood_play', {'display': display, 'state':'rank', 'mode': 'by_class_lucky_lucke'}) }}">Lucky Lucke</a>
    <a id="action_sort_by_panoramix" class="icon left{% if mode == 'by_class_panoramix' %} selected{% endif %}" href="{{ url('darkwood_play', {'display': display, 'state':'rank', 'mode': 'by_class_panoramix'}) }}">Panoramix</a>
    <a id="action_sort_by_popeye" class="icon left{% if mode == 'by_class_popeye' %} selected{% endif %}" href="{{ url('darkwood_play', {'display': display, 'state':'rank', 'mode': 'by_class_popeye'}) }}">Popeye</a>
