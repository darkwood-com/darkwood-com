{% for flashMessage in app.session.flashbag.get('warning') %}<div class="alert_warning">{{ flashMessage }}</div>{% endfor %}
<table class="table table-borderless">
    <colgroup>
        <col class="col-3" />
        <col class="col-3" />
        <col class="col-3" />
    </colgroup>
    <thead>
    <tr>
        <th colspan="3">{{ 'darkwood.play.label.your_settings'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td rowspan="5"><img src="{{ asset(vich_uploader_asset(data.info.player.sword, 'image')) }}" /></td>
        <td>{{ 'darkwood.play.label.your_sword'|trans|upper }}</td>
        <td>{{ data.info.player.sword.title }}</td>
    </tr>
    <tr>
        <td>{{ 'darkwood.play.label.damages'|trans|upper }}</td>
        <td>{{ data.info.damage.min }} + {{ data.info.swordDamage }}% {{ 'darkwood.play.label.to'|trans }} {{ data.info.damage.max }} + {{ data.info.swordDamage }}%</td>
    </tr>
    <tr>
        <td>{{ 'darkwood.play.label.sell_price'|trans|upper }}</td>
        <td>{{ data.sword.sellPrice }}</td>
    </tr>
    <tr>
        <td>{{ 'darkwood.play.label.your_gold'|trans|upper }}</td>
        <td>{{ data.info.player.gold }}</td>
    </tr>
    <tr>
        <td>{{ 'darkwood.play.label.your_strength'|trans|upper }}</td>
        <td>{{ data.info.player.strength }}</td>
    </tr>
    </tbody>
</table>

<table class="table table-borderless" id="swordinfos">
    <colgroup>
        <col class="col-3" />
        <col class="col-3" />
        <col class="col-3" />
    </colgroup>
    <thead>
    <tr>
        <th colspan="3">{{ 'darkwood.play.label.buy'|trans }} {{ data.currentSword.sword.title }}</th>
    </tr>
    </thead>
    <tbody>
    {% if data.currentSword.next %}
        <tr>
            <td colspan="3" class="spaced">
                <a class="go" data-state="sword" data-action-sword-next="true">
                    <img src="{{ asset('/common/images/components/theme-dark/site/icons/16x16/arrow_up.png') }}" />
                </a>
            </td>
        </tr>
    {% endif %}
    <tr>
        <td rowspan="3"><img src="{{ asset(vich_uploader_asset(data.currentSword.sword, 'image')) }}" /></td>
        <td>{{ 'darkwood.play.label.buy_price'|trans|upper }}</td>
        <td>{{ data.currentSword.sword.price }}</td>
    </tr>
    <tr>
        <td>{{ 'darkwood.play.label.damages'|trans|upper }}</td>
        <td>{{ data.currentSword.sword.damageMin }} {{ 'darkwood.play.label.to'|trans }} {{ data.currentSword.sword.damageMax }}</td>
    </tr>
    <tr>
        <td>{{ 'darkwood.play.label.required_strength'|trans|upper }}</td>
        <td>{{ data.currentSword.sword.requiredStrength }}</td>
    </tr>
    {% if data.currentSword.previous %}
        <tr>
            <td colspan="3" class="spaced">
                <a class="go" data-state="sword" data-action-sword-previous="true">
                    <img src="{{ asset('/common/images/components/theme-dark/site/icons/16x16/arrow_down.png') }}" />
                </a>
            </td>
        </tr>
    {% endif %}
    </tbody>
</table>

<p id="actions">
    <a id="action_return" class="go icon left">{{ 'darkwood.play.label.return'|trans }}</a>
    <a id="action_buy" class="go icon right" data-state="sword" data-action-sword-buy="true">{{ 'darkwood.play.label.buy'|trans }}</a>
    <a id="action_sell" class="go icon right" data-state="sword" data-action-sword-sell="true">{{ 'darkwood.play.label.sell'|trans }}</a>
</p>
